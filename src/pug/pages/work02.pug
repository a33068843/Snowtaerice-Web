            .work2_hero#js_triggerHero
              .leftBox
                .circle1
                .circle2
                .circle3
                .circle4
                .figma
                .titleText
                .subtitleText
              .rightBox
                .triangle
                .circle1
              .card3
              .card2
              .card1
            .work_linkButton
              .buttonWrapper
                a.button.link
