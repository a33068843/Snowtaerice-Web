include _header.pug
include _footer.pug
block variables
	- var activePage = ""

<!DOCTYPE html>
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(name="viewport" content="initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, width=device-width")
		//- OG圖片 ( 分享網址時會顯示小 Embedded 的圖片 )
		meta(property="og:image" content="./images/og.png")
		//- 標題
		title Have Fun
		//- 網站標題圖樣
		link(rel="icon" type="image/png" sizes="16x16" href="favicon.png")
		//- 字體的 CDN
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@100;300;400;500;700;900&family=Poppins:wght@100;200;300;400;500;600;700;800;900&family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">
		//- 引用 CSS
		link(href="./css/index.css", rel="stylesheet")
		link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css", rel="stylesheet")
		//- 其餘自定義的 CSS 可以更新在這裡
		block css
	body
		+header(activePage)
		block content
		+footer()
		//- 引用 JS
		script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js")
		script(src="./js/index.js" type="text/javascript")
		//- 其餘自定義的 JS 可以更新在這裡
		block js
